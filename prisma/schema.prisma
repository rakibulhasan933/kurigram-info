// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  phone    String @unique
  password String
  photoUrl String
  status   Role   @default(USER)

  @@map("users")
}

model Service {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String   @unique
  thumbnails  String
  category    String
  photos      String[]
  description String

  @@map("services")
}

model Review {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  productId String
  userId    String
  userName  String
  photoUrl  String
  comment   String

  @@map("reviews")
}

enum Role {
  USER
  ADMIN
}
